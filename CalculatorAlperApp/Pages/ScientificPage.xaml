<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorAlperApp.Pages.ScientificPage"
             Title="Scientific Calculator">

    <VerticalStackLayout Padding="10">
        <!-- Ekran -->
        <Entry x:Name="Display" Text="0" FontSize="32" HorizontalTextAlignment="End"
               IsReadOnly="True" BackgroundColor="Black" TextColor="White"/>

        <!-- Bilimsel Butonlar -->
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnSpacing="5" RowSpacing="5">

            <!-- Üst Satır -->
      <Button Text="sin" Grid.Row="0" Grid.Column="0" Clicked="OnFunctionClicked"/>
<Button Text="cos" Grid.Row="0" Grid.Column="1" Clicked="OnFunctionClicked"/>
<Button Text="tan" Grid.Row="0" Grid.Column="2" Clicked="OnFunctionClicked"/>
<Button Text="ln" Grid.Row="0" Grid.Column="3" Clicked="OnFunctionClicked"/>
<Button Text="log" Grid.Row="0" Grid.Column="4" Clicked="OnFunctionClicked"/>

<Button Text="π" Grid.Row="1" Grid.Column="0" Clicked="OnFunctionClicked"/>
<Button Text="e" Grid.Row="1" Grid.Column="1" Clicked="OnFunctionClicked"/>
<Button Text="xʸ" Grid.Row="1" Grid.Column="2" Clicked="OnOperatorClicked"/>
<Button Text="√x" Grid.Row="1" Grid.Column="3" Clicked="OnFunctionClicked"/>
<Button Text="mod" Grid.Row="1" Grid.Column="4" Clicked="OnOperatorClicked"/>

<Button Text="7" Grid.Row="2" Grid.Column="0" Clicked="OnNumberClicked"/>
<Button Text="8" Grid.Row="2" Grid.Column="1" Clicked="OnNumberClicked"/>
<Button Text="9" Grid.Row="2" Grid.Column="2" Clicked="OnNumberClicked"/>
<Button Text="÷" Grid.Row="2" Grid.Column="3" Clicked="OnOperatorClicked"/>
<Button Text="(" Grid.Row="2" Grid.Column="4" Clicked="OnParenthesisClicked"/>

<Button Text="4" Grid.Row="3" Grid.Column="0" Clicked="OnNumberClicked"/>
<Button Text="5" Grid.Row="3" Grid.Column="1" Clicked="OnNumberClicked"/>
<Button Text="6" Grid.Row="3" Grid.Column="2" Clicked="OnNumberClicked"/>
<Button Text="×" Grid.Row="3" Grid.Column="3" Clicked="OnOperatorClicked"/>
<Button Text=")" Grid.Row="3" Grid.Column="4" Clicked="OnParenthesisClicked"/>

<Button Text="1" Grid.Row="4" Grid.Column="0" Clicked="OnNumberClicked"/>
<Button Text="2" Grid.Row="4" Grid.Column="1" Clicked="OnNumberClicked"/>
<Button Text="3" Grid.Row="4" Grid.Column="2" Clicked="OnNumberClicked"/>
<Button Text="−" Grid.Row="4" Grid.Column="3" Clicked="OnOperatorClicked"/>
<Button Text="x!" Grid.Row="4" Grid.Column="4" Clicked="OnFunctionClicked"/>

<Button Text="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Clicked="OnNumberClicked"/>
<Button Text="," Grid.Row="5" Grid.Column="2" Clicked="OnNumberClicked"/>
<Button Text="+" Grid.Row="5" Grid.Column="3" Clicked="OnOperatorClicked"/>
<Button Text="=" Grid.Row="5" Grid.Column="4" Clicked="OnEqualsClicked"/>


        </Grid>
    </VerticalStackLayout>
</ContentPage>
